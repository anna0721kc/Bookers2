<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div id="error_explanation">
        <% if @user.errors.any? %>
        <h3><%=  @user.errors.count %>error prohibited this obj from being saved:</h3>
        <%  @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        <% end %>
      </div>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
      　</div>
     <div class="form-group">
        <label for="user_image">Image</label><br>
        <div class="form-group">
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
     </div>
      <div class="form-group">
        <label for="introduction">Introduction</label><br>
        <%= f.text_area :introduction, class:"introduction", rows:"3" %>
      </div>

      <div class="update">
        <%= f.submit "Update User" ,class: 'btn btn-secondary' %>
      </div>
      <% end %>
</div>
</div>
</div>