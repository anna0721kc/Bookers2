<div class="container px-5 px-sm-0">
   <div class="row">
<!--ここから-->
<%= render 'users/userinfo', book: @new, user: @user %>
<!--ここまで-->
<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table table-hover table-inverse">
    <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %><br>
            <%= link_to @user.name, user_path(@user.id) %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
          <td><%= link_to'Edit', edit_book_path(@book.id) ,class: "btn btn-success" %></td>
          <% end %>
          <% if @book.user == current_user %>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %></td>
          <% end %>
          </tr>
          </tbody>
          </table>
          </div>
          </div>
          </div>